<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/user_pic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/other"/>


        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/Black"
                android:text="Loading..."/>

        <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin_half"
                android:layout_marginHorizontal="20dp"
                android:textSize="16sp"
                android:textColor="@color/DarkGray"/>

        <TextView
                android:id="@+id/caption"
                android:layout_marginVertical="@dimen/def_margin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/DarkGray"
                android:lineSpacingExtra="4dp"
                android:text="@string/caption_default"/>

        <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/Gray"/>

        <LinearLayout
                android:id="@+id/edit"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="Edit Profile"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/logout"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_sign"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="Log Out"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/Gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Artikel kamu"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_myArticle"
                android:layout_margin="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>